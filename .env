# App
NODE_ENV=development
NEXT_PUBLIC_APP_NAME=CopilotPDV

# API
NEXT_PUBLIC_API_URL=https://api.example.com
API_URL=http://localhost:3000/api

# Autenticação / Sessões
JWT_SECRET=<sua_chave_jwt_secreta_aqui>
SESSION_SECRET=<sua_chave_de_sessao_aqui>

# Banco de dados
# Exemplo Postgres: postgres://user:password@host:port/dbname
DATABASE_URL=postgres://<user>:<password>@<host>:5432/<database>

# Firebase (se usar)
FIREBASE_API_KEY=<firebase_api_key>
FIREBASE_AUTH_DOMAIN=<project>.firebaseapp.com
FIREBASE_PROJECT_ID=<project>
FIREBASE_STORAGE_BUCKET=<project>.appspot.com
FIREBASE_MESSAGING_SENDER_ID=<id>
FIREBASE_APP_ID=<app_id>

# Serviços de pagamento / terceiros (exemplos)
# PIX / Gateway de pagamento
PAYMENT_PROVIDER_URL=https://payments.example.com
PAYMENT_API_KEY=<sua_payment_api_key>

# Vite / Next (exemplos)
NEXT_PUBLIC_VERCEL_ENV=development

# Configurações do PDV
PDV_DEFAULT_TAX=0.0
PDV_CURRENCY=BRL
PDV_DEFAULT_QUANTITY=1

# Logs / Telemetria
SENTRY_DSN=<sentry_dsn_se_houver>

# Desenvolvimento local
PORT=3000